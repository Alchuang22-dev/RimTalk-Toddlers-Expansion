<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- 和幼儿玩耍的冷却期 - 应用于成年人 -->
  <HediffDef>
    <defName>RimTalk_CarriedPlayCooldown</defName>
    <label>played with toddler recently</label>
    <description>This person recently played with a toddler they were carrying. They need a moment before playing again.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.6, 0.8, 1.0)</defaultLabelColor>
    <isBad>false</isBad>
    <initialSeverity>1.0</initialSeverity>
    <maxSeverity>1.0</maxSeverity>
    <scenarioCanAdd>false</scenarioCanAdd>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>2500~3500</disappearsAfterTicks>
        <showRemainingTime>true</showRemainingTime>
      </li>
    </comps>
    <stages>
      <li>
        <becomeVisible>true</becomeVisible>
      </li>
    </stages>
  </HediffDef>
</Defs>
