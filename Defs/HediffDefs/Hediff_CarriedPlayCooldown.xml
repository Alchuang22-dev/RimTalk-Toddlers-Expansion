<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Cooldown for carried play. Applied to the carried toddler/baby. -->
  <HediffDef>
    <defName>RimTalk_CarriedPlayCooldown</defName>
    <label>played while carried recently</label>
    <description>This carried toddler recently played while being carried. They need a short break before carried play can be used again.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.6, 0.8, 1.0)</defaultLabelColor>
    <isBad>false</isBad>
    <initialSeverity>1.0</initialSeverity>
    <maxSeverity>1.0</maxSeverity>
    <scenarioCanAdd>false</scenarioCanAdd>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>2500~3500</disappearsAfterTicks>
        <showRemainingTime>true</showRemainingTime>
      </li>
    </comps>
    <stages>
      <li>
        <becomeVisible>true</becomeVisible>
      </li>
    </stages>
  </HediffDef>
</Defs>
