<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <HediffDef ParentName="DiseaseBase">
    <defName>RimTalk_ToddlerToothDecay</defName>
    <label>dental cavities</label>
    <labelNoun>a cavity</labelNoun>
    <description>Painful cavities from eating too many sweets.</description>
    <initialSeverity>0.001</initialSeverity>
    <maxSeverity>1.5</maxSeverity>
    <tendable>true</tendable>
    <comps>
      <li Class="RimTalk_ToddlersExpansion.Integration.Toddlers.HediffCompProperties_ToothDecayProgress"/>
    </comps>
    <stages>
      <li>
        <label>minor cavities</label>
        <minSeverity>0</minSeverity>
        <painOffset>0.02</painOffset>
        <statOffsets>
          <EatingSpeed>-0.02</EatingSpeed>
        </statOffsets>
      </li>
      <li>
        <label>moderate cavities</label>
        <minSeverity>0.6</minSeverity>
        <painOffset>0.05</painOffset>
        <statOffsets>
          <EatingSpeed>-0.05</EatingSpeed>
        </statOffsets>
      </li>
      <li>
        <label>severe cavities</label>
        <minSeverity>1.2</minSeverity>
        <painOffset>0.05</painOffset>
        <statOffsets>
          <EatingSpeed>-0.05</EatingSpeed>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Talking</capacity>
            <offset>-0.05</offset>
          </li>
          <li>
            <capacity>Social</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

  <HediffDef>
    <defName>RimTalk_MissingTooth</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>missing tooth</label>
    <description>A tooth was extracted due to severe decay. Will be replaced by adult teeth when the child grows up.</description>
    <initialSeverity>1</initialSeverity>
    <maxSeverity>1</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <!-- Disappears at age 13 (approximately 13 years * 60 days/year * 60000 ticks/day) -->
        <disappearsAfterTicks>46800000~46800000</disappearsAfterTicks>
        <showRemainingTime>false</showRemainingTime>
      </li>
    </comps>
    <capMods>
      <li>
        <capacity>Talking</capacity>
        <offset>-0.02</offset>
      </li>
      <li>
        <capacity>Social</capacity>
        <offset>-0.05</offset>
      </li>
    </capMods>
  </HediffDef>

  <HediffDef>
    <defName>RimTalk_MidnightSnackCooldown</defName>
    <label>midnight snack cooldown</label>
    <description>Recently had a midnight snack.</description>
    <initialSeverity>1</initialSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>60000</disappearsAfterTicks>
        <showRemainingTime>true</showRemainingTime>
      </li>
    </comps>
  </HediffDef>
</Defs>
