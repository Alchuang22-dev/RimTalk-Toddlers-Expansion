<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <HediffDef>
    <defName>RimTalk_CarriedProtection</defName>
    <label>being carried</label>
    <description>This toddler is being carried and is partially shielded from harm. While carried, their comfortable temperature range is massively increased (cold tolerance and heat tolerance both improved).</description>
    <hediffClass>HediffWithComps</hediffClass>
    <isBad>false</isBad>
    <scenarioCanAdd>false</scenarioCanAdd>
    <initialSeverity>1.0</initialSeverity>
    <maxSeverity>1.0</maxSeverity>
    <stages>
      <li>
        <becomeVisible>true</becomeVisible>
        <statOffsets>
          <ComfyTemperatureMin>-80</ComfyTemperatureMin>
          <ComfyTemperatureMax>80</ComfyTemperatureMax>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>
</Defs>
