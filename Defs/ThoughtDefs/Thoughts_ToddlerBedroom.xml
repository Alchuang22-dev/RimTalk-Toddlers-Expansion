<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThoughtDef MayRequire="Ludeon.RimWorld.Biotech">
    <defName>RimTalk_MyBabyNearby</defName>
    <label>my baby nearby</label>
    <thoughtClass>Thought_Situational</thoughtClass>
    <workerClass>RimTalk_ToddlersExpansion.Integration.BioTech.ThoughtWorker_MyBabyNearby</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <developmentalStageFilter>Baby</developmentalStageFilter>
    <stages>
      <li>
        <label>my baby nearby</label>
        <description>My baby is sleeping peacefully nearby... how cute!</description>
        <baseMoodEffect>2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef MayRequire="Ludeon.RimWorld.Biotech">
    <defName>RimTalk_ToddlerSleepAlone</defName>
    <label>sleeping alone</label>
    <thoughtClass>Thought_Memory</thoughtClass>
    <validWhileDespawned>true</validWhileDespawned>
    <developmentalStageFilter>Baby</developmentalStageFilter>
    <durationDays>0.5</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>sleeping alone</label>
        <description>I'm scared... where is mom?</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef MayRequire="Ludeon.RimWorld.Biotech">
    <defName>RimTalk_ToddlerSleepWithOthers</defName>
    <label>slept with others</label>
    <thoughtClass>Thought_Memory</thoughtClass>
    <validWhileDespawned>true</validWhileDespawned>
    <developmentalStageFilter>Baby</developmentalStageFilter>
    <durationDays>0.5</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>slept with others</label>
        <description>It's a bit crowded... I want a hug.</description>
        <baseMoodEffect>-1</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef MayRequire="Ludeon.RimWorld.Biotech">
    <defName>RimTalk_ToddlerSleepInNursery</defName>
    <label>slept in nursery</label>
    <thoughtClass>Thought_Memory</thoughtClass>
    <validWhileDespawned>true</validWhileDespawned>
    <developmentalStageFilter>Baby</developmentalStageFilter>
    <durationDays>0.5</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>slept in nursery</label>
        <description>So many cribs here... it's a little noisy, but safe.</description>
        <baseMoodEffect>1</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef MayRequire="Ludeon.RimWorld.Biotech">
    <defName>RimTalk_ToddlerSleepWithParents</defName>
    <label>slept with family</label>
    <thoughtClass>Thought_Memory</thoughtClass>
    <validWhileDespawned>true</validWhileDespawned>
    <developmentalStageFilter>Baby</developmentalStageFilter>
    <durationDays>0.5</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>slept with family</label>
        <description>The pillow is soft! Time to sleep...</description>
        <baseMoodEffect>3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
</Defs>
