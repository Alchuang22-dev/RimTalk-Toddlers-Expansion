<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>RimTalk_ToyBlockPile</defName>
    <label>block pile</label>
    <description>A small pile of soft blocks for tiny hands.</description>
    <thingClass>Building</thingClass>
    <graphicData>
      <texPath>Things/Building/ToddlerToys/toy_block_pile</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(0.9,0.9)</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Standable</passability>
    <fillPercent>0.1</fillPercent>
    <pathCost>10</pathCost>
    <statBases>
      <WorkToBuild>600</WorkToBuild>
      <MaxHitPoints>100</MaxHitPoints>
      <Beauty>1</Beauty>
    </statBases>
    <costList>
      <WoodLog>15</WoodLog>
      <Cloth>10</Cloth>
    </costList>
    <designationCategory>Furniture</designationCategory>
    <thingCategories>
      <li>Joy</li>
    </thingCategories>
    <comps>
      <li Class="RimTalk_ToddlersExpansion.Integration.Toddlers.CompProperties_ToddlerToy">
        <groundToy>true</groundToy>
        <joyKind>Meditative</joyKind>
        <joyGainPerTick>0.00022</joyGainPerTick>
        <useDurationTicks>1800</useDurationTicks>
      </li>
    </comps>
  </ThingDef>

