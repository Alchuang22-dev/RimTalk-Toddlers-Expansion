    <statBases>
      <WorkToBuild>1000</WorkToBuild>
      <MaxHitPoints>140</MaxHitPoints>
      <Beauty>2</Beauty>
    </statBases>
    <costList>
      <WoodLog>30</WoodLog>
      <Cloth>12</Cloth>
    </costList>
    <designationCategory>Furniture</designationCategory>
    <thingCategories>
      <li>Joy</li>
